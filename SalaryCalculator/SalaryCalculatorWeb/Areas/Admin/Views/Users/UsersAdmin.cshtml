@model SalaryCalculatorWeb.Areas.Admin.Models.UsersViewModel

    <h2>Paychecks</h2>
    <table class="table table-bordered table-hover table-responsive table-striped">
        <tr>
            <th>
                User Id
            </th>
            <th>
                Companyname
            </th>
            <th>
                Company address
            </th>
            <th>
                E-mail
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.Users)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CompanyAddress)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "Users", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Delete", "Delete", "Users", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
    </table>
    }
