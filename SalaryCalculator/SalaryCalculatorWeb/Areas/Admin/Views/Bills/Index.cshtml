@{
    ViewBag.Title = "Remuneration Bills";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@using SalaryCalculatorWeb.Areas.Admin.Models
@model SalaryCalculatorWeb.Areas.Admin.Models.PageViewModel<BillViewModel>

<h2>Remuneration Bills</h2>
<table class="table table-bordered table-hover table-responsive table-striped">
    <tr>
        <th>
            Remuneration Bill Id
        </th>
        <th>
            Created Date
        </th>
        <th>
            Gross Salary
        </th>
        <th>
            Social Security Income
        </th>
        <th>
            Personal Insurance
        </th>
        <th>
            Income Tax
        </th>
        <th>
            Net Wage
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model.Items)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.GrossSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SocialSecurityIncome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PersonalInsurance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IncomeTax)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetWage)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", "Bills", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                @Html.ActionLink("Delete", "Delete", "Bills", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
            </td>
        </tr>
    }
    @if (Model.Pager.EndPage > 1)
    {
        <ul class="pagination">
            @if (Model.Pager.CurrentPage > 1)
            {
                <li>
                    <a href="~/Admin/Paychecks/Index">First</a>
                </li>
                <li>
                    <a href="~/Admin/Paychecks/Index?page=@(Model.Pager.CurrentPage - 1)">Previous</a>
                </li>
            }

            @for (var page = Model.Pager.StartPage; page <= Model.Pager.EndPage; page++)
            {
                <li class="@(page == Model.Pager.CurrentPage ? "active" : "")">
                    <a href="~/Admin/Bills/Index?page=@page">@page</a>
                </li>}

            @if (Model.Pager.CurrentPage < Model.Pager.TotalPages)
            {
                <li>
                    <a href="~/Admin/Bills/Index?page=@(Model.Pager.CurrentPage + 1)">Next</a>
                </li>
                <li>
                    <a href="~/Admin/Bills/Index?page=@(Model.Pager.TotalPages)">Last</a>
                </li>
            }
        </ul>
    }
</table>
