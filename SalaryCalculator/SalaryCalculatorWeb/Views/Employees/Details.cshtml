@model SalaryCalculatorWeb.Models.EmployeeViewModels.EmployeeViewModel

<div>
    <h1>@Html.DisplayFor(model => model.FirstName) @Html.DisplayFor(model => model.MiddleName) @Html.DisplayFor(model => model.LastName)</h1>
    <hr />
</div>
<p>
    @Html.ActionLink("Add Labor Contract", "CreateLaborContract", "LaborContract", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-primary btn-sm" })
    @Html.ActionLink("Add Non-Labor Contract", "CreateNonLaborContract", "NonLaborContract", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-info btn-sm" })
    @Html.ActionLink("Add Freelance Contract", "CreateFreelanceContract", "FreelanceContract", new { id = Model.Id }, htmlAttributes: new { @class = "btn btn-warning btn-sm" })
    @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-primary btn-sm" })
</p>
@if (Model.EmployeePaychecks.Count() != 0)
{
    <h2><a href="#accordeon" class="accordion-title accordionTitle js-accordionTrigger" data-toggle="collapse" aria-expanded="false" aria-controls="accordion1"> Paychecks</a></h2>
    <table id="accordeon" aria-hidden="true" class="table table-bordered table-hover table-responsive table-striped collapse accordion-content accordionItem is-collapsed">
        <tr>
            <th>
                Personal Id
            </th>
            <th>
                Created Date
            </th>
            <th>
                Gross Salary
            </th>
            <th>
                Fixed Bonus
            </th>
            <th>
                Non Fixed Bonus
            </th>
            <th>
                Social Security Income
            </th>
            <th>
                Personal Insurance
            </th>
            <th>
                Income Tax
            </th>
            <th>
                Net Wage
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model.EmployeePaychecks)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Employee.PersonalId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedDate, "{0:dd/MM/yyyy}")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossSalary)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossFixedBonus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GrossNonFixedBonus)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SocialSecurityIncome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalInsurance)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IncomeTax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NetWage)
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", "LaborContract", new { id = item.Id }, new { @class = "btn btn-warning btn-xs" })
                    @Html.ActionLink("Delete", "Delete", "LaborContract", new { id = item.Id }, new { @class = "btn btn-danger btn-xs" })
                </td>
            </tr>
        }
    </table>
}

